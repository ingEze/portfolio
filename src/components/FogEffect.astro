<div class="fog-overlay"></div>
<div class="street-lights">
    <div class="light"></div>
    <div class="light"></div>
    <div class="light"></div>
</div>

<style>
    .fog-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            radial-gradient(ellipse at 20% 30%, rgba(80, 80, 80, 0.15), transparent 40%),
            radial-gradient(ellipse at 80% 70%, rgba(60, 60, 60, 0.12), transparent 50%),
            radial-gradient(ellipse at 50% 50%, rgba(100, 100, 100, 0.08), transparent 60%);
        pointer-events: none;
        z-index: 1;
        animation: fogMove 20s ease-in-out infinite;
    }

    @keyframes fogMove {
        0%, 100% { opacity: 0.3; transform: translateX(0) translateY(0); }
        50% { opacity: 0.5; transform: translateX(20px) translateY(-20px); }
    }

    .street-lights {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .light {
        position: absolute;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(0, 255, 136, 0.05), transparent 70%);
        animation: flicker 4s infinite alternate;
    }

    .light:nth-child(1) { top: 10%; left: 10%; animation-delay: 0s; }
    .light:nth-child(2) { top: 60%; right: 15%; animation-delay: 1s; }
    .light:nth-child(3) { bottom: 20%; left: 30%; animation-delay: 2s; }

    @keyframes flicker {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.6; }
    }

    @media (max-width: 768px) {
        .fog-overlay {
            animation: fogMove 15s ease-in-out infinite;
        }

        @keyframes fogMove {
            0%, 100% { opacity: 0.25; transform: translateX(0) translateY(0); }
            50% { opacity: 0.4; transform: translateX(15px) translateY(-15px); }
        }

        .light {
            width: 150px;
            height: 150px;
        }

        .light:nth-child(1) { top: 5%; left: 5%; }
        .light:nth-child(2) { top: 50%; right: 5%; }
        .light:nth-child(3) { bottom: 10%; left: 20%; }
    }

    @media (max-width: 480px) {
        .fog-overlay {
            opacity: 0.8;
        }

        .light {
            width: 100px;
            height: 100px;
        }

        @keyframes flicker {
            0%, 100% { opacity: 0.2; }
            50% { opacity: 0.4; }
        }
    }
</style>
